<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:text="Halaman Tambah Toko"
            android:textColor="@android:color/white"
            android:background="@color/hijau_bg"
            android:textSize="30dp"
            android:gravity="center"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="560dp"
            android:orientation="vertical"
            android:background="@drawable/images">

            <ImageView
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:src="@drawable/login_toko"
                android:layout_gravity="center"
                android:layout_marginTop="20dp" />

            <EditText
                android:id="@+id/editTextTextPersonName2"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:background="@drawable/round_form"
                android:drawablePadding="2dp"
                android:drawableTint="#151515"
                android:ems="10"
                android:hint="    Nama Toko"
                android:inputType="textPersonName"
                android:textColorHint="#000000"
                android:layout_marginTop="50dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <EditText
                android:id="@+id/editTextTextPersonName3"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:background="@drawable/round_form"
                android:hint="    Alamat Toko"
                android:inputType="textPersonName"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp" />

            <EditText
                android:id="@+id/editTextTextPersonName4"
                android:layout_width="330dp"
                android:layout_height="50dp"
                android:background="@drawable/round_form"
                android:hint="    Deskripsi Toko"
                android:inputType="textPersonName"
                android:textColorHint="#000000"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_marginBottom="10dp"/>

            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp">

                <EditText
                    android:id="@+id/editTextTextPersonName8"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_form"
                    android:ems="10"
                    android:hint="    Long"
                    android:inputType="textPersonName"
                    android:textColorHint="#000000" />

                <EditText
                    android:id="@+id/editTextTextPersonName7"
                    android:layout_width="160dp"
                    android:layout_height="50dp"
                    android:background="@drawable/round_form"
                    android:ems="10"
                    android:hint="    Lat"
                    android:inputType="textPersonName"
                    android:textColorHint="#000000"
                    android:layout_marginLeft="5dp"/>
            </LinearLayout>

            <Button
                android:id="@+id/button2"
                android:layout_width="116dp"
                android:layout_height="48dp"
                android:backgroundTint="@android:color/holo_green_dark"
                android:text="Tambah"
                android:textColor="#F8F8F7"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginTop="30dp"
                android:layout_gravity="center"/>
        </LinearLayout>
        <View
            android:id="@+id/view"
            android:layout_width="413dp"
            android:layout_height="130dp"
            android:background="@drawable/ic_wave_bottom" />
    </LinearLayout>
</RelativeLayout>