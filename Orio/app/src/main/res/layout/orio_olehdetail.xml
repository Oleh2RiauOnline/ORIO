<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffd700">

    <LinearLayout
        android:id="@+id/atas"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:background="@android:color/white">
        <ImageView
            android:id="@+id/imageView3"
            android:layout_width="212dp"
            android:layout_height="212dp"
            tools:srcCompat="@tools:sample/avatars"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="30dp"/>
        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <TextView
                android:id="@+id/textView4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Bulu Kembojo"
                android:textColor="#66AA09"
                android:textColorHighlight="#E1A5A5"
                android:textSize="20sp"
                android:textStyle="bold"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="30dp"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Disini Letak Content Segala macamnya"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10dp"/>
            <Button
                android:id="@+id/map_toko"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:drawableStart="@drawable/lokasi"
                android:layout_marginLeft="15sp"
                android:layout_marginTop="10sp"
                android:background="@color/colorAccent"
                android:text="Lokasi"
                android:textStyle="bold"
                android:textColor="@android:color/white"
                android:layout_marginRight="10dp"/>

                <Button
                    android:id="@+id/keranjang_tambah"
                    android:layout_marginLeft="15sp"
                    android:layout_marginTop="10dp"
                    android:layout_marginRight="10dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Tambah Ke Keranjang"
                    android:textSize="10dp"
                    android:drawableStart="@drawable/login_toko"/>

        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/atas"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:layout_marginBottom="20dp"
        android:background="@android:color/white">
        <TextView
            android:layout_marginTop="50dp"
            android:id="@+id/textView8"
            android:layout_width="94dp"
            android:layout_height="27dp"
            android:text="Harga"
            android:layout_marginLeft="10dp"
            android:textColor="#605C03"
            android:textSize="20sp"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bolu kembojo terbuat dari bla bla"
            android:layout_marginLeft="10dp"
            android:textColor="#28BC9A"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/textView10"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Deskripsi"
            android:layout_marginLeft="10dp"
            android:textSize="18sp"
            android:textStyle="bold" />
    </LinearLayout>
</RelativeLayout>