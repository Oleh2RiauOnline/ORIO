<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Customer.RiwayatPembelian">

    <LinearLayout
        android:id="@+id/ini_history"
        android:orientation="horizontal"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/hijau_bg">
        <TextView
            android:id="@+id/riwayat_customer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Riwayat Customers"
            android:textAlignment="center"
            android:textColor="@android:color/white"
            android:textSize="30dp"
            android:layout_marginTop="20dp"
            android:layout_marginBottom="20dp"/>
    </LinearLayout>
    <ListView
        android:id="@+id/list_riwayat"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ini_history"/>
</RelativeLayout>