<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <androidx.appcompat.widget.Toolbar
        android:background="#ffd700"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_marginRight="20dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <Button
                android:background="@drawable/back"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
            <LinearLayout
                android:layout_weight="1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
            <Button
                android:background="@drawable/menu_menu"
                android:layout_width="30dp"
                android:layout_height="30dp"/>
        </LinearLayout>

    </androidx.appcompat.widget.Toolbar>
    <LinearLayout
        android:background="@drawable/ic_wave2"
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <LinearLayout
            android:padding="20dp"
            android:orientation="vertical"
            android:layout_width="200dp"
            android:layout_height="wrap_content">
            <TextView
                android:textStyle="bold"
                android:textSize="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Temukan Oleh Oleh Anda"
                android:layout_marginVertical="10dp"/>
            <LinearLayout
                android:orientation="horizontal"
                android:layout_width="wrap_content"
                android:layout_height="match_parent">
                <Button
                    android:id="@+id/login_button"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="#073042"
                    android:text="Login"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
                <Button
                    android:id="@+id/daftar_button"
                    android:layout_marginLeft="5dp"
                    android:layout_width="60dp"
                    android:layout_height="wrap_content"
                    android:background="#073042"
                    android:text="Sign Up"
                    android:textStyle="bold"
                    android:textColor="@android:color/white"/>
            </LinearLayout>

        </LinearLayout>
            <LinearLayout
                android:layout_marginVertical="10dp"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_marginVertical="10dp"
                    android:layout_width="200dp"
                    android:layout_height="50dp"
                    android:text="Ingin Membuka Toko?"
                    android:textColor="@android:color/holo_green_dark"
                    android:textStyle="bold"
                    android:textSize="20dp" />
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                    <Button
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="#073042"
                        android:text="Akun Toko"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                    <Button
                        android:layout_marginLeft="5dp"
                        android:layout_width="100dp"
                        android:layout_height="wrap_content"
                        android:background="#073042"
                        android:text="Daftar Toko"
                        android:textStyle="bold"
                        android:textColor="@android:color/white"/>
                </LinearLayout>

            </LinearLayout>
    </LinearLayout>
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:text="Daftar Toko"
            android:textSize="25dp"
            android:textStyle="bold"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <LinearLayout
                android:layout_marginTop="10dp"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/selembayum"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
                <RelativeLayout
                    android:layout_width="10dp"
                    android:layout_height="match_parent">
                </RelativeLayout>
                <LinearLayout
                    android:gravity="center"
                    android:padding="20dp"
                    android:layout_weight="1"
                    android:background="@drawable/selembayum"
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <ImageView
                        android:adjustViewBounds="true"
                        android:cropToPadding="true"
                        android:layout_width="50dp"
                        android:layout_height="wrap_content"/>
                </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_marginTop="10dp"
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <LinearLayout
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1"
                android:background="@drawable/selembayum"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"

                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
            <RelativeLayout
                android:layout_width="10dp"
                android:layout_height="match_parent">
            </RelativeLayout>
            <LinearLayout
                android:gravity="center"
                android:padding="20dp"
                android:layout_weight="1"
                android:background="@drawable/selembayum"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:adjustViewBounds="true"
                    android:cropToPadding="true"

                    android:layout_width="50dp"
                    android:layout_height="wrap_content"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    </LinearLayout>
